#include "libft.h"

int	tabcount(const char *str, char c)
{
	int	i;
	int	count;

	i = 0;
	count = 0;
	while (str[i])
	{
		while (str[i] == c)
			i++;
		while (str[i] != c && str[i])
			i++;
		count++;
	}
	return (count);
}

void	allo_mem(char **blk, int m, int	size)
{
	int		i;

	i = 0;
	while (i < m)
	{
		blk[i] = malloc(size + 1);
		i++;
	}
	blk[i] = NULL;
}

void	feelme(char *str, char c, char **tab)
{
	int	i;
	int	m;
	char	*loc;

	i = 0;
	m = 0;
	while (str[i])
	{
		while (str[i] == c)
			i++;
		loc = &str[i];
		while (str[i] != c && str[i])
			i++;
		ft_strlcpy(tab[m], loc, &str[i] - loc + 1);
		m++;
	}
	tab[m] = NULL;
}

char	**ft_split(char const *s, char c)
{
	char **tab;

	tab = malloc(tabcount(s, c) + 1);
	allo_mem(tab, tabcount(s, c), ft_strlen((char *)s));
	feelme((char *)s, c, tab);
	return (tab);
}

#include "libft.h"

int	tabcount(const char *str, char c)
{
	int	i;
	int	count;

	i = 0;
	count = 0;
	while (str[i])
	{
		while (str[i] == c)
			i++;
		while (str[i] != c && str[i])
		{
			i++;
			count++;
		}
	}
	return (count);
}

void	allo_mem(char **blk, int m)
{
	int		i;

	i = 0;
	while (i < m)
	{
		blk[i] = malloc(1000 + 1);
		i++;
	}
	blk[i] = NULL;
}

void	filler(char *str, char c, char **tab)
{
	int	i;
	int	j;
	int	m;

	i = 0;
	j = 0;
	m = 0;
	while (m < 5)
	{
		while (str[i] == c)
			i++;
		while (str[i] != c && str[i])
		{
			tab[m][j] = str[i];
			j++;
			i++;
		}
		tab[m][j] = '\0';
		m++;
	}
}

char	**ft_split(char const *s, char c)
{ 
	char **tab;
	
	tab = malloc(tabcount(s, c) + 1);
	allo_mem(tab, tabcount(s, c));
	filler ((char *)s, c, tab);
	return (tab);
}

int	main()
{
	int	i;
	char **s;
	char m[]="we#here#lot of noise";

	i = 0;
	s = ft_split(m, '#');
	while(i < 4)
	{
		ft_putstr_fd(s[i], 1);
		ft_putstr_fd("\n", 1);
		i++;
	}
	return 0;
}

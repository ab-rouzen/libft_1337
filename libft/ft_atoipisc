#include "libft.h"

int	ft_atoipisc(char *str)
{
	int	i;
	long	holder;
	long	multiply;

	holder = 0;
	multiply = 1;
	if (str[0] == '-')
		i = ft_strlen(str) - 1;
	else i = ft_strlen(str);
	while (i > 0)
	{
		holder += (str[i] - 48) * multiply;
		i--;
		multiply *= 10;
	}	
	if (str[0] == '-')
		return (-holder);
	return (holder);
}
